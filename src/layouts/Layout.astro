---
import "@fontsource-variable/onest";
import Header from "../components/Header.astro";
import Experience from "../components/Experience.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Boris Fernandez</title>
  </head>
  <body class="">
    <div class="relative min-h-screen min-w-screen bg-slate-950">
      <div
        class="absolute bottom-0 left-[-20%] right-0 top-[-10%] h-[500px] w-[500px] rounded-full bg-[radial-gradient(circle_farthest-side,rgba(255,0,182,.15),rgba(255,255,255,0))]"
      >
      </div>
      <Header />

      <slot />
      <Footer />
    </div>
  </body>

  <style is:global>
    :root {
      color-scheme: light dark;
    }
    html {
      font-family: "Onest", system-ui, sans-serif;
      scroll-behavior: smooth;
    }
    body {
      display: flex;
      flex-direction: column;
      align-items: center;
      
    }
    @media (prefers-reduced-motion: reduce) {
      html {
        scroll-behavior: auto;
      }
    }
  </style>
</html>
